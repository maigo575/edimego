<h2 style="text-align: center; margin-top: 32px;">パスワードの変更</h2>

<div style="max-width: 400px; margin: 32px auto;">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field" style="margin-bottom: 20px;">
    <%= f.label :email, 'メールアドレス' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", style: 'width: 100%; padding: 8px; font-size: 1.1rem; border-radius: 6px; border: 1px solid #ccc;' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div style="color: #555; margin-bottom: 20px;">現在、確認待ちのメールアドレス: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field" style="margin-bottom: 20px;">
    <%= f.label :password, '新しいパスワード' %> <i>（変更しない場合は空欄のまま）</i><br />
    <%= f.password_field :password, autocomplete: "new-password", style: 'width: 100%; padding: 8px; font-size: 1.1rem; border-radius: 6px; border: 1px solid #ccc;' %>
    <% if @minimum_password_length %>
      <br />
      <em>※<%= @minimum_password_length %>文字以上</em>
    <% end %>
  </div>

  <div class="field" style="margin-bottom: 20px;">
    <%= f.label :password_confirmation, '新しいパスワード（確認）' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", style: 'width: 100%; padding: 8px; font-size: 1.1rem; border-radius: 6px; border: 1px solid #ccc;' %>
  </div>

  <div class="field" style="margin-bottom: 32px;">
    <%= f.label :current_password, '現在のパスワード（変更を確定するために入力してください）' %><br />
    <%= f.password_field :current_password, autocomplete: "current-password", style: 'width: 100%; padding: 8px; font-size: 1.1rem; border-radius: 6px; border: 1px solid #ccc;' %>
  </div>

  <div class="actions" style="text-align: center;">
    <%= f.submit "更新する", style: 'padding: 10px 32px; font-size: 1.1rem; border-radius: 8px; border: none; background: #222; color: #fff; font-weight: bold; cursor: pointer;' %>
  </div>
<% end %>
</div>

<div style="max-width: 400px; margin: 32px auto; text-align: center;">
  <div style="margin-bottom: 16px;">アカウントを削除したい場合はこちら:</div>
  <%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に削除しますか？", turbo_confirm: "本当に削除しますか？" }, method: :delete, style: 'padding: 10px 32px; font-size: 1.1rem; border-radius: 8px; border: 2px solid #c00; background: #fff; color: #c00; font-weight: bold; cursor: pointer;' %>
</div>

<div style="text-align: center; margin-bottom: 40px;">
  <%= link_to "戻る", mypage_path, style: 'font-size: 1.1rem; color: #222; text-decoration: underline;' %>
</div>
