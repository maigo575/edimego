<div class="login-container">
  <h2>ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, required: true, placeholder: "例：example@mail.com" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, required: true, placeholder: "パスワード" %>
    </div>

    <div class="form-group checkbox-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "次回から自動でログイン" %>
    </div>

    <div class="form-actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>

  <div class="register-link">
    <%= link_to "新規登録はこちら", new_user_registration_path %>
  </div>

  <div class="forgot-password-link">
    <%= link_to "パスワードを忘れた方はこちら", new_user_password_path %>
  </div>
  
</div>
